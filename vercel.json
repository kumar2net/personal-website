{
  "installCommand": "npm install",
  "buildCommand": "npm run build",
  "outputDirectory": "apps/personal-website/dist",
  "build": {
    "env": {
      "ROLLUP_SKIP_NODEJS_NATIVE_BUILD": "1"
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    {
      "source": "/",
      "has": [{ "type": "host", "value": "news.kumar2net.com" }],
      "destination": "/news/index.html"
    },
    {
      "source": "/(.*)",
      "has": [{ "type": "host", "value": "news.kumar2net.com" }],
      "destination": "/news/$1"
    },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
