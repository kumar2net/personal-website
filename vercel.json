{
  "installCommand": "npm install",
  "buildCommand": "npm run build",
  "outputDirectory": "apps/personal-website/dist",
  "build": {
    "env": {
      "ROLLUP_SKIP_NODEJS_NATIVE_BUILD": "1"
    }
  },
  "crons": [
    {
      "path": "/api/sitemap-submit",
      "schedule": "17 6 * * *"
    }
  ],
  "rewrites": [
    {
      "source": "/",
      "has": [{ "type": "host", "value": "news.kumar2net.com" }],
      "destination": "/news/index.html"
    },
    {
      "source": "/(.*)",
      "has": [{ "type": "host", "value": "news.kumar2net.com" }],
      "destination": "/news/$1"
    },
    { "source": "/sitemap.xml", "destination": "/api/sitemap" },
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
