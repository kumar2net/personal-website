{
  "name": "personal-website-turbo",
  "private": true,
  "packageManager": "npm@11.6.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo dev --filter=personal-website",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "sitemap": "node apps/personal-website/scripts/generate-sitemap.mjs",
    "bookhints:process": "node apps/personal-website/scripts/bookhint-agentic.mjs",
    "bookhints:watch": "node apps/personal-website/scripts/bookhint-agentic.mjs --watch",
    "ai-debug": "node ai-tools/auto-debug-aggressive.js"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "chrome-launcher": "^1.2.1",
    "lighthouse": "^13.0.1",
    "openai": "^6.9.0",
    "playwright": "^1.56.1",
    "turbo": "^2.6.0"
  },
  "dependencies": {
    "@mui/x-charts": "^8.18.0",
    "@mui/x-date-pickers": "^8.18.0",
    "date-fns": "^4.1.0"
  }
}
