{
  "name": "personal-website",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "NODE_OPTIONS='--max-old-space-size=4096' vite --open",
    "dev:netlify": "NODE_OPTIONS='--max-old-space-size=4096' netlify dev",
    "dev:clean": "bash scripts/start-dev-clean.sh",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "tailwind": "npx tailwindcss -i ./src/input.css -o ./src/output.css --watch",
    "convert:books": "node scripts/convert-docx-to-md.mjs",
    "semantic:index": "node scripts/index-semantic.mjs",
    "ga:topics": "node scripts/ga-blog-topic-generator.mjs",
    "ga:topic-suggestions": "node scripts/ga4-topic-suggestions.mjs",
    "ga:config": "node scripts/show-ga4-config.mjs",
    "ga:test": "node scripts/test-ga4-connection.mjs",
    "ga:all": "npm run ga:topics && npm run ga:topic-suggestions",
    "test:unit": "node scripts/test-unit.mjs",
    "test:e2e": "node scripts/test-e2e.mjs",
    "test:all": "node scripts/run-all-tests.mjs",
    "test:pre-deploy": "npm run test:unit && npm run test:e2e && npm run build",
    "test:viewport": "node scripts/test-viewport-mobile.mjs",
    "pre-deploy": "node scripts/pre-deploy-checklist.mjs",
    "sitemap": "node scripts/generate-sitemap.mjs",
    "cms:convert": "node scripts/convert-md-to-jsx.mjs",
    "biome:check": "npx @biomejs/biome check .",
    "biome:format": "npx @biomejs/biome format --write .",
    "biome:lint": "npx @biomejs/biome lint --write .",
    "biome:fix": "npx @biomejs/biome check --write .",
    "quality:check": "npm run biome:check && npm run test:all",
    "quality:fix": "npm run biome:fix && npm run test:all",
    "cleanup": "node scripts/cleanup-codebase.mjs",
    "codemon:analyze": "npx codemon analyze",
    "codemon:clean": "npx codemon clean",
    "clean:all": "npm run cleanup && npm run biome:fix && npm run test:all",
    "cleanup:quick": "node scripts/quick-cleanup.mjs",
    "cleanup:full": "node scripts/cleanup-codebase.mjs",
    "clean:whistle": "npm run cleanup:quick && npm run biome:fix && npm run test:all",
    "fetch:comments": "node scripts/fetch-comments-build.mjs",
    "build:with-comments": "npm run fetch:comments && npm run build",
    "comments:stats": "node -e \"import('./src/data/comments.js').then(m => console.log(JSON.stringify(m.getCommentStats(), null, 2)))\"",
    "test:comment-env": "node scripts/test-comment-env.mjs"
  },
  "dependencies": {
    "@google-analytics/data": "^5.2.0",
    "@google-cloud/aiplatform": "^5.4.0",
    "@google-cloud/bigquery": "^8.1.1",
    "@heroicons/react": "^2.2.0",
    "@netlify/blobs": "^10.0.10",
    "@tailwindcss/typography": "^0.5.16",
    "docx-preview": "^0.3.6",
    "dotenv": "^17.2.1",
    "execa": "^9.6.0",
    "fast-xml-parser": "^5.2.5",
    "framer-motion": "^11.0.3",
    "google-auth-library": "^9.13.0",
    "googleapis": "^156.0.0",
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.524.0",
    "mammoth": "^1.10.0",
    "pdfjs-dist": "^5.4.54",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet-async": "^2.0.5",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^6.21.3",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.1",
    "sentiment": "^5.0.2",
    "sharp": "^0.34.2",
    "tesseract.js": "^6.0.1",
    "turndown": "^7.2.0",
    "vite": "^5.0.12"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@eslint/js": "^9.25.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "codemon": "^0.1.31-development",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "globals": "^16.0.0",
    "netlify-cli": "^23.1.4",
    "postcss": "^8.4.33",
    "puppeteer": "^24.20.0",
    "tailwindcss": "^3.4.1",
    "terser": "^5.44.0"
  }
}
