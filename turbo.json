{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"],
      "env": [
        "GEMINI_API_KEY",
        "OPENAI_API_KEY",
        "NEWSDATA_API_KEY",
        "X_BEARER_TOKEN",
        "ROLLUP_SKIP_NODEJS_NATIVE_BUILD",
        "BLOB_READ_WRITE_TOKEN",
        "GCP_SERVICE_ACCOUNT_JSON"
      ]
    },
    "dev": {
      "persistent": true
    },
    "lint": {},
    "test": {}
  }
}
